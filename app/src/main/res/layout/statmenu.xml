<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.compApp.ansel.companionapp.StatMenu">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="-13dp"
        android:src="@drawable/companionapp" />


    <TextView
        android:id="@+id/infoText"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="22dp"
        android:paddingTop="20dp"
        android:text="Large Text"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

    <Button
        android:id="@+id/ShowStatsBTN"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoText"
        android:layout_marginStart="8dp"
        android:layout_marginTop="29dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:onClick="showStats"
        android:text="@string/showStats"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/ShowLeaderboardBTN"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ShowStatsBTN"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="63dp"
        android:background="@drawable/button_shape"
        android:onClick="showLeaderboard"
        android:text="@string/showLeaderboard"
        android:textColor="@color/colorWhite" />


</RelativeLayout>